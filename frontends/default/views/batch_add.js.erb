<% html = ''.html_safe -%>
<% @records.each do |scope, @record| -%>
<% html << render(:partial => 'form', :locals => {:scope => "[#{scope}]", :columns => active_scaffold_config.batch_create.columns, :form_action => :batch_create}) -%>
<% end %>
